        <activity
            android:name=".NewPassage"
            android:label="Creation"
            android:parentActivityName=".Home">

        <activity
            android:name=".Category"
            android:parentActivityName=".Home">
        -->

        <activity
            android:name=".Category"
            android:label="Categories"
            android:parentActivityName=".Home" />

        <activity
            android:name=".NewPassage"
            android:label="Creation"
            android:parentActivityName=".Home" />

        <activity
            android:name=".Passage"
